					<th>#</th><th>Title</th><th>Writer</th><th>Regdate</th>
				</tr>
			</thead>
			<tbody>
				<tr th:each="dto : ${result.dtoList}">
					<td>[[${dto.bno}]]</td>
					<td>
						<a th:href="@{/board/read(gno=${dto.bno}, page=${result.page},
							type=${pageRequestDto.type},keyword=${pageRequestDto.keyword})}">[[${dto.title}]]</a>
							--------[<b th:text="${dto.replyCount}"></b>] 
					</td>
					<td>[[${dto.writerName}]]<small>[[${dto.writerEmail}]]</small> </td>
					<td>[[${dto.regDate}]]</td>
				</tr>
			</tbody>
		</table>
		<!-- 페이지처리 -->
		<ul class="pagination justify-content-center align-items-center">
		<!-- prev -->
			<li class="page-item" th:if="${result.prev}">
				<a th:href="@{/guestbook/list(page=${result.start-1})}" class="page-link">
					Previous
				</a>
			</li>
		<!--  현재페이지 -->
			<li th:class="'page-item ' +${result.page == page ? 'active' : ''}" th:each="page : ${result.pageList}">
				<a th:href="@{/guestbook/list(page=${page},
					type=${pageRequestDto.type},keyword=${pageRequestDto.keyword})}" class="page-link">
					[[${page}]]
				</a>
			</li>
			<!-- next -->
			<li class="page-item" th:if="${result.next}">
				<a th:href="@{/guestbook/list(page=${result.end+1})}" class="page-link">
					Next
				</a>
			</li>
		</ul>
		
		<div align="right">
			<a th:href="@{/guestbook/register}" class="btn btn-primary">글쓰기</a>
